<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_team_name_detail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.detail.MovieDetailActivity">

        <ImageButton
            android:id="@+id/ibBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:alpha="0.6"
            android:background="@drawable/bg_btn_back"
            android:elevation="10dp"
            android:padding="16dp"
            android:src="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_team_jersey"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:background="@color/black60"
            android:src="@drawable/bg_jersey"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_team_badge_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:elevation="16dp"
            android:src="@drawable/bg_team_badge"
            app:layout_constraintBottom_toBottomOf="@+id/iv_team_jersey"
            app:layout_constraintStart_toStartOf="@+id/iv_team_jersey"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_jersey" />


        <TextView
            android:id="@+id/tv_team_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:maxLines="3"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_badge_detail"
            tools:text="FC Barcelona" />


        <ImageButton
            android:id="@+id/ic_facebook"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_facebook"
            app:layout_constraintEnd_toEndOf="@+id/ic_twitter"
            app:layout_constraintTop_toBottomOf="@+id/ic_twitter" />

        <ImageButton
            android:id="@+id/ic_twitter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_twitter"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_instagram"
            app:layout_constraintTop_toBottomOf="@+id/ic_instagram" />


        <ImageButton
            android:id="@+id/ic_instagram"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_instagram"
            app:layout_constraintEnd_toEndOf="@+id/ic_youtube"
            app:layout_constraintTop_toBottomOf="@+id/ic_youtube" />

        <ImageButton
            android:id="@+id/ic_youtube"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_youtube"
            app:layout_constraintEnd_toEndOf="@+id/ic_website"
            app:layout_constraintTop_toBottomOf="@+id/ic_website" />

        <ImageButton
            android:id="@+id/ic_website"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_web"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_team_jersey"
            app:layout_constraintTop_toTopOf="@+id/iv_team_jersey" />


        <TextView
            android:id="@+id/labelOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/label_team_overview"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_name_detail" />

        <TextView
            android:id="@+id/tv_foundation_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/labelOverview"
            app:layout_constraintTop_toBottomOf="@+id/labelOverview"
            tools:text="Since : 1987" />


        <TextView
            android:id="@+id/tv_team_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_foundation_year"
            tools:text="@tools:sample/lorem/random" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>